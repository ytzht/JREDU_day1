<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jredu.MainActivity_change">

    <TextView
        android:id="@+id/textView_change"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f18302"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/change"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#f18302"
        android:textColorHint="#f18302"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_edit_background"
        android:layout_below="@+id/textView_change"/>
    <LinearLayout
        android:layout_below="@+id/change"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">


    <Button
        android:id="@+id/change_bt"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:background="@drawable/login_edit_background2"
        android:text="修改"
        android:textColor="#fff"
        android:textSize="18sp"

        android:layout_marginTop="15dp" />
</LinearLayout>
</RelativeLayout>
